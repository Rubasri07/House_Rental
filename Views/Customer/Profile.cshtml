@model House_Rental_System.Models.Customer_Details

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<head>

    <link rel="shortcut icon" href="~/assets/images/fav.jpg">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css" />
    <style>
        .box-de {
            background-color: #007ACC;
        }

        .btn {
            background-color: #007ACC;
        }
    </style>

</head>


<div class="container-fluid ">
    <div class="container ">
        <div class="row ">

            <div class="col-sm-10 login-box">
                <div class="row">
                    <div class="col-lg-4 col-md-5 box-de">
                        <div class="small-logo">

                            <img src="~/assets/logo-removebg-preview.png" style="width:75px;height:75px;" />
                        </div>
                        <br /><br />
                              <div class="ditk-inf sup-oi">
                                  @{if (ViewBag.image != null)
                                      {
                                          var base64 = Convert.ToBase64String(ViewBag.image);
                                          var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                          <img src='@imgsrc' style="height:100px;width:100px;border-radius:50%;border:1px solid white;" />
                                      }
                                      else
                                      {
                                          <img src="~/assets/profile.png" />
                                      }
                                  }
                                  <br /><br /><br />
                                  <a href="~/Customer/EditProfile/@Model.Customer_Id" class="btn fa fa-edit" style="background-color: white; color: rgba(0,122,204,1);">
                                      Edit
                                  </a>
                              </div>
                    </div>

                    <div class="col-lg-8 col-md-7 log-det">

                            <h2>Profile</h2>

                            <div class="text-box-cont">
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="far fa-user"></i>
                                        </span>
                                    </div>
                                    @Html.EditorFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Full Name" ,@readonly="readonly"} })
                                    
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1">
                                            <i class="far fa-envelope"></i>
                                        </span>
                                    </div>
                                    @Html.EditorFor(model => model.Customer_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @readonly = "readonly" } })
                                    
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-phone"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Customer_Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "PhoneNo", @readonly = "readonly" } })
                                    
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-city"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Customer_State, new { htmlAttributes = new { @class = "form-control", @placeholder = "State", @readonly = "readonly" } })
                                    
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="basic-addon1"><i class="fas fa-city"></i></span>
                                    </div>
                                    @Html.EditorFor(model => model.Customer_City, new { htmlAttributes = new { @class = "form-control", @placeholder = "City", @readonly = "readonly" } })
                                    
                                </div>
                                
                                
                                
                            </div>


                        
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>